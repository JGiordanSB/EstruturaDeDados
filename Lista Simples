#include <iostream>
using namespace std;

class Lista {
    
    private:
    string contato;
    long long int numero;
    
    public:
    Lista ();
    Lista (string, int);
    
    int getNumero();
    void setNumero(int num);
    void setContato(string contato);
    string getContato();
};

Lista::Lista() {
    contato = "";
    numero = 0;
}

Lista::Lista(string nome, int num) {
    contato = nome;
    numero = num;
}

int Lista::getNumero() {
    return numero;
}

void Lista::setNumero(int num) {
    numero = num;
}

string Lista::getContato() {
    return contato;
}

void Lista::setContato(string nome) {
    contato = nome;
}

int main() {
    
    int qnt = 2;
    
   Lista* lista = new Lista[qnt];
   int qntPessoas = 0;
   
   while(true) {
       string var;
       cin >> var;
       
       if(var == "add") {
           if(qntPessoas == qnt) {
               qnt *= 2;
               
               Lista* lista2 = new Lista[qnt];
               
               for(int i = 0; i < qntPessoas; i++) {
                   lista2[i] = lista[i];
               }
               
               delete [] lista;
               lista = lista2;
               
           }
           
           string nome;
           cout << "Digite o nome: ";
           cin >> nome;
           
           int numero;
           cout << "Digite o número: ";
           cin >> numero;
           
           lista [qntPessoas] = Lista(nome, numero);
           qntPessoas++;
       }
       
       else if(var == "remove") {
           string nome;
           
           cout << "Quem deseja remover? ";
           cin >> nome;
           
           for(int i = 0; i < qntPessoas; i++) {
               if(lista[i].getContato() == nome) {
                   for(int j = i; j < qntPessoas; j++) {
                       lista [j] = lista [j+1];
                   }
                   
                   qntPessoas --;
                   break;
               }
           }
       }
       
       else if(var == "get") {
           if(qntPessoas == 0) { cout << "Lista vazia" << endl; break; }
           
           int num;
           
           cout << "Diga o numero da Pessoa: ";
           cin >> num;
           
           for(int i = 0; i < qntPessoas; i++) {
               if(lista[i].getNumero() == num) {
                   cout << "Nome: " << lista[i].getContato() << endl;
                   break;
               }
           }
       }
       
       else if(var == "print") {
           if(qntPessoas == 0) { cout << "Lista vazia" << endl; break; }
           
           for(int i = 0; i < qntPessoas; i++) {
               cout << "Nome: " << lista[i].getContato() << " " << "Número: " <<
               lista[i].getNumero() << endl;
           }
       }
       
       else if(var == "stop") {
           break;
       }
   }

   cout << endl << "Quantiade de Pessoas: " << qntPessoas << "\nTamanho do Array: " << qnt;
    
    
    return 0;
}
