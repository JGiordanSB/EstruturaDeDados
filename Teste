#include <iostream>
using namespace std;

class Lista {
    
    private:
    string contato;
    int numero;
    
    public:
    Lista ();
    Lista (string, int);
    
    int getNumero();
    void setNumero(int num);
    void setContato(string contato);
    string getContato();
};

Lista::Lista() {
    contato = "";
    numero = 0;
}

Lista::Lista(string nome, int num) {
    contato = nome;
    numero = num;
}

int Lista::getNumero() {
    return numero;
}

void Lista::setNumero(int num) {
    numero = num;
}

string Lista::getContato() {
    return contato;
}

void Lista::setContato(string nome) {
    contato = nome;
}

int main() {
    
   Lista lista [50];
   int x = 0;
   
   while(true) {
       string var;
       cin >> var;
       
       if(var == "add") {
           string nome;
           cout << "Digite o nome: ";
           cin >> nome;
           
           int numero;
           cout << "Digite o número: ";
           cin >> numero;
           
           lista [x] = Lista(nome, numero);
           x++;
       }
       
       else if(var == "remove") {
           String nome;
           
           cout << "Quem deseja remover? ";
           cin >> nome;
       }
       
       else if(var == "get") {
           int num;
           
           cout << "Diga o numero da Pessoa: ";
           cin >> num;
           
           for(int i = 0; i < x; i++) {
               if(lista[i].getNumero() == num) {
                   cout << "Nome: " << lista[i].getContato() << endl;
                   break;
               }
           }
           
           cout << "Número não existe." << endl;
       }
       
       else if(var == "stop") {
           break;
       }
   }

   cout << endl << x;
    
    
    return 0;
}
